{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Phonet",

  "patterns": [{ "include": "#statement" }, { "include": "#what" }],

  "repository": {
    "statement": {
      "match": "([^&;\n\\s]\\s*(?:(&)(?:[^;]*)(;)|(?:[^;\n]*))([;\n]*))",
      "captures": {
        "1": {
          "patterns": [
            { "include": "#mode" },
            { "include": "#class" },
            { "include": "#rule" },
            { "include": "#test" }
          ]
        },
        "3": { "name": "keyword.operator" },
        "4": { "name": "keyword.operator" }
      }
    },

    "mode": {
      "match": "~(<.*>|/.*/|\\[.*\\])",
      "name": "string"
    },

    "class": {
      "match": "(\\$(&?)\\w+)\\s*(?:(=)(.+))?",
      "captures": {
        "1": { "name": "entity.name.class" },
        "2": { "name": "keyword.control" },
        "3": { "name": "keyword.operator" },
        "4": { "patterns": [{ "include": "#regex" }] }
      }
    },

    "rule": {
      "match": "(?:(\\+)|(!))\\s*(.+)?",
      "captures": {
        "1": { "name": "keyword.control" },
        "2": { "name": "variable.language.self" },
        "3": { "patterns": [{ "include": "#regex" }] }
      }
    },

    "test": {
      "match": "(\\?)(?:(\\+)|(!))\\s*(.+)?",
      "captures": {
        "1": { "name": "keyword.other" },
        "2": { "name": "keyword.control" },
        "3": { "name": "variable.language.self" },
        "4": { "patterns": [{ "include": "#regex" }] }
      }
    },

    "regex": {
      "patterns": [
        { "include": "#ampersand" },
        {
          "comment": "Groups",
          "begin": "\\(",
          "end": "\\)",
          "beginCaptures": { "0": { "name": "punctuation.brackets.phonet" } },
          "endCaptures": { "0": { "name": "punctuation.brackets.phonet" } },
          "patterns": [{ "include": "#regex" }]
        },

        {
          "comment": "Named Group References",
          "name": "keyword.other.phonet",
          "match": "\\\\k\\s*<[^<>]+>"
        },

        {
          "comment": "Operators and Lookarounds",
          "name": "keyword.operator.phonet",
          "match": "\\\\.|(?<=\\()\\?(<?(=|!)|:)|[\\[\\]\\|\\?\\+\\*\\.]|(?<=\\[)\\^"
        },

        {
          "comment": "Named Group Definitions",
          "name": "keyword.other.phonet",
          "match": "(?<=\\(\\?)\\s*P?\\s*<[^<>]+>"
        },

        {
          "comment": "Meta Characters and Negative Character Classes",
          "name": "keyword.other.phonet",
          "match": "(?<!\\[)\\^|\\$"
        },

        {
          "comment": "Quantifiers",
          "name": "keyword.operator.phonet",
          "begin": "\\{",
          "end": "\\}",
          "match": "\\{(\\d+\\,?\\d*)\\}|\\{(\\d*\\,\\d+)\\}"
        },

        {
          "comment": "Class References - Ascii `<>` or Special `⟨⟩`",
          "name": "entity.name.type.phonet",
          "match": "(?<!\\(\\?)(<\\w+>|⟨\\w+⟩)"
        }
      ]
    }
  },

  "scopeName": "source.phonet"
}
